define("PRODCATLIST_PREG",   "/^([[:digit:]\ \%\,\;]*|(-1))$/");
define("ANY_OR_INT_PREG",    "/^(~any~|(\+|-)?[[:digit:]]+)$/");


define("PHONE_PREG",         "/^[[:alnum:]\#\ \+\,\.\(\)\#\-]*$/");
define("PRINTABLE_PREG",     "/^[[:print:]]*$/");
define("SRCH_TYPE_PREG",     "/^[[:alnum:]\.\_\$]*$/");
define("TABLENAME_PREG",     "/^[[:alpha:]\_]*$/");
